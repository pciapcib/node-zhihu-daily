#! /usr/bin/env node

const program = require('commander')

const { version } = require('../package')

program
  .version(version)
  .usage('<command> [option]')
  .command('run', 'run main menu').alias('r')
  .command('latest', 'fetch latest news').alias('l')
  .command('clear', 'clear cache files').alias('c')
  .parse(process.argv)
